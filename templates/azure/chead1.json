{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "chead1pri",
            "location": "[resourceGroup().location]",
            "tags": {
                "type": "core"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "chead1priip",
                        "properties": {
                            "privateIPAddress": "10.110.1.11",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'cluster', 'cluster-pri1')]"
                            },
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'cluster-private')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "chead1",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'chead1pri')]"
            ],
            "tags": {
                "type": "core"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "/subscriptions/32cfa85b-6a08-4b31-9a21-69e06b6ad5a5/resourceGroups/alces-images/providers/Microsoft.Compute/images/CENTOS7-OPENFLIGHT-2020.1-1803202029_azure-8G"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "chead1OSdisk",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "DiskSizeGB": 128,
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "chead1.cloud1.pri.clustername.alces.network",
                    "adminUsername": "alces",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/alces/.ssh/authorized_keys",
                                    "keyData": "ssh-rsa REPLACEME"
                                }
                            ]
                        },
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'chead1pri')]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "chead1/startupscript",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/', 'chead1')]"
            ],
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "protectedSettings": {
                    "commandToExecute": "curl http://10.110.1.200/deployment/scripts/HEAD_profile.bash | /bin/bash -x | tee -a /tmp/mainscript-default-output"
                }
            }
        }
    ]
}
